<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title><%= title %></title>

</head>
<body>

<h1>Welcome Register Page</h1>	

<a href="/login">already user</a>

<h1><%= title %></h1>
      <div>
          <h1><%= title %></h1>
       <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>password</th>
            <th>cpassword</th>
            <th>gender</th>
            <th>image</th>
            <th>action</th>
          </tr>
        </thead>
        <tbody>
          <% if(records.length > 0){ %>
          <% records.forEach(function(row){ %>
          <tr>
            <td><%= row.name %></td>
            <td><%= row.email %></td>
            <td><%= row.password %></td>
            <td><%= row.cpassword %></td>
            <td><%= row.gender %></td>
            <td>
              <% if(row.image){%>
              <img src="./upload/<%= row.image %>" alt="profile image" width="30">
              <% } %></td> 
                       <td><a href="/edit/<%= row._id %>">edit</a>
              <a href="/delete/<%= row._id %>">delete</a>
            </td>
           </tr>
           <% })}else{ %>
           <tr>
                <td>No Record Found</td>
                
              </tr>
            <% } %>
        </tbody>
      </table>
    </div>
  


<form method="POST"  action="/register" enctype="multipart/form-data">
<div>	
	<input type="text" name="name" placeholder="Enter your name...">
</div>
<div>	
	<input type="text" name="email" placeholder="Enter your email...">
</div>
<div>	
	<input type="text" name="password" placeholder="Enter your password...">
</div>
<div>	
	<input type="text" name="cpassword" placeholder="Enter your confirm password...">
</div>
<div>
	<input type="radio" name="gender" value="male"> Male
	<input type="radio" name="gender" value="female"> Female
</div>
<div>
  <input type="file" name="file" required>
</div>
<div>
    <input type="submit"  name="submit" value="submit">
</div>
</form>

</body>
</html>	